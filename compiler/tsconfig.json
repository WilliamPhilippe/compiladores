{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "rootDir": "./",
    "lib": ["ES2015.Promise", "ES2020.Promise"]
  }
}